<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 헤더: 뒤로가기 버튼과 스케치 런 제목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="뒤로가기"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="스케치 런"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:contentDescription="러너 아이콘"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <!-- 러닝 코스 목록 제목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="러닝 코스 목록"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- 코스 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCourses"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginBottom="24dp" />

        <!-- 선택한 러닝 코스 미리보기 지도 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택한 러닝 코스 미리보기"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp">

            <!-- 지도는 여기에 표시됩니다 (Google Maps, Naver Maps 등) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도 영역"
                android:textColor="#666666"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- 버튼들 -->
        <Button
            android:id="@+id/btnCourseDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="코스 상세 보기"
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnFindLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내 위치 찾기"
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnStartRun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스케치 런 시작"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 코스 정보 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="코스 정보"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- 총 거리 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 거리"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTotalDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5km"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- 예상 소요 시간 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예상 소요 시간"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvEstimatedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30분"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- 난이도 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="난이도"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중급"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

