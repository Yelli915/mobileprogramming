<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- 공통 버튼 스타일 -->
    <style name="ButtonPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">#FF6B35</item>
        <item name="android:textColor">@color/accent_white</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">#FF6B35</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- 통계 카드 제목 텍스트 -->
    <style name="TextStatCardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- 통계 카드 값 텍스트 -->
    <style name="TextStatCardValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextInputLayout 커스텀 스타일 - 포커스와 무관하게 항상 흰색 -->
    <style name="TextInputLayoutWhite" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/accent_white</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

</resources>

