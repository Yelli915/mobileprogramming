<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header: 뒤로가기 버튼과 제목 -->
    <include
        android:id="@+id/header_back"
        layout="@layout/layout_header_back" />

    <!-- Real-time Record Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실시간 기록"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="false">

            <!-- Timer Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="타이머"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/timerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Distance Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거리"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/distanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 km"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Average Pace Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평균 페이스"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/averagePaceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--/km"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Instant Pace Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="순간 페이스"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/instantPaceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--/km"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- 러닝 시작 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/startRunningButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="러닝 시작"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:cornerRadius="32dp"
            app:backgroundTint="#FF6B35"
            app:elevation="8dp"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />


        <!-- 일시 정지 + 러닝 종료 버튼 (가로 정렬) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <!-- 재개 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/resumeButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="재개"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="32dp"
                app:backgroundTint="#28A745"
                app:elevation="8dp"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                android:paddingVertical="16dp"
                android:visibility="gone"/>

            <!-- 일시 정지 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/pauseButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="일시 정지"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="32dp"
                app:strokeColor="#FF6B35"
                app:strokeWidth="3dp"
                app:iconGravity="textStart"
                app:iconTint="#FF6B35"
                android:textColor="#FF6B35"
                android:paddingVertical="16dp"
                android:visibility="gone" />

            <!-- 러닝 종료 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/endRunButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="러닝 종료"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="32dp"
                app:strokeColor="#DC3545"
                app:strokeWidth="3dp"
                app:iconGravity="textStart"
                app:iconTint="#DC3545"
                android:textColor="#DC3545"
                android:paddingVertical="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
