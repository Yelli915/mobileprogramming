<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark_neon"
    tools:context=".MainActivity">

    <!-- 스크롤 가능한 콘텐츠 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Header: 환영 메시지 + 설정 버튼 -->
            <RelativeLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/settings_button"
                    android:text="@string/welcome_message"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp" />

                <ImageButton
                    android:id="@+id/settings_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/settings"
                    app:tint="@color/accent_white"
                    android:padding="8dp" />

            </RelativeLayout>

            <!-- 이번 주 통계 카드 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/stats_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이번 주 기록"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_white"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- 총 거리 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/total_distance_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0 km"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#FF6B35" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="총 거리"
                                android:textSize="12sp"
                                android:textColor="@color/accent_white"
                                android:alpha="0.7"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- 총 시간 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/total_time_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0:00"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#28A745" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="총 시간"
                                android:textSize="12sp"
                                android:textColor="@color/accent_white"
                                android:alpha="0.7"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- 러닝 횟수 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/run_count_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0회"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#17A2B8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="러닝 횟수"
                                android:textSize="12sp"
                                android:textColor="@color/accent_white"
                                android:alpha="0.7"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 러닝 시작 버튼들 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/main_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="운동 시작하기"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_white"
                        android:layout_marginBottom="16dp" />

                    <!-- 일반 러닝 버튼 -->
                    <com.google.android.material.button.MaterialButton
                    android:id="@+id/start_normal_run_button"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="일반 러닝"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:cornerRadius="32dp"
                    app:backgroundTint="#FF6B35"
                    app:elevation="6dp"
                    android:layout_marginBottom="12dp" />

                    <!-- 코스 선택 버튼 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/start_course_run_button"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="스케치 러닝"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:cornerRadius="32dp"
                        app:strokeColor="#FF6B35"
                        app:strokeWidth="3dp"
                        android:textColor="#FF6B35" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 최근 기록 카드 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/recent_runs_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="최근 러닝"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent_white" />

                        <TextView
                            android:id="@+id/view_all_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="전체보기 >"
                            android:textSize="14sp"
                            android:textColor="#FF6B35"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                    </RelativeLayout>

                    <!-- 최근 기록 리스트 (동적으로 추가) -->
                    <LinearLayout
                        android:id="@+id/recent_runs_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 기록 없을 때 -->
                        <TextView
                            android:id="@+id/no_runs_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="아직 러닝 기록이 없습니다.\n첫 러닝을 시작해보세요!"
                            android:textSize="14sp"
                            android:textColor="@color/accent_white"
                            android:alpha="0.6"
                            android:gravity="center"
                            android:padding="24dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 관리자 기능 카드 (관리자만 표시) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/admin_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background_dark"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관리자 기능"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_white"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/admin_course_button"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="코스 등록"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:cornerRadius="32dp"
                        app:backgroundTint="#28A745"
                        app:elevation="6dp"
                        app:icon="@android:drawable/ic_menu_add"
                        app:iconGravity="textStart"
                        app:iconTint="#FFFFFF" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
