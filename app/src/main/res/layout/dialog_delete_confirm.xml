<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    android:layout_margin="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 제목과 취소 버튼 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기록 삭제"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <ImageButton
                android:id="@+id/btn_cancel_delete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="취소"
                app:tint="?attr/colorOnSurfaceVariant"
                android:padding="8dp" />

        </RelativeLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorSurfaceVariant"
            android:layout_marginBottom="20dp" />

        <!-- 경고 아이콘 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="#FF5252"
                android:padding="12dp" />

        </LinearLayout>

        <!-- 메시지 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이 기록을 삭제하시겠습니까?\n\n이 작업은 되돌릴 수 없습니다."
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorSurfaceVariant"
            android:layout_marginBottom="20dp" />

        <!-- 액션 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- 취소 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_delete_bottom"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="취소"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                app:strokeColor="?attr/colorOnSurfaceVariant"
                app:strokeWidth="2dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:elevation="0dp" />

            <!-- 삭제 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="삭제"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                app:backgroundTint="#FF5252"
                app:elevation="0dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

