<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_dark_neon"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="80dp"
    android:paddingBottom="40dp">

    <!-- Branding Area -->
    <LinearLayout
        android:id="@+id/branding_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal|top">

        <TextView
            android:id="@+id/app_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_display_name"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/main_orange"
            android:layout_marginBottom="16dp"
            android:shadowColor="@color/neon_glow_soft"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8" />

        <TextView
            android:id="@+id/app_tagline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_tagline"
            android:textSize="16sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

    <!-- Login Area -->
    <LinearLayout
        android:id="@+id/login_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/google_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/button_neon_orange"
            android:text="@string/sign_in_with_google"
            android:textColor="@color/accent_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:gravity="center"
            android:paddingStart="48dp"
            android:paddingEnd="16dp"
            android:contentDescription="@string/sign_in_with_google"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/terms_notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_notice"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            android:gravity="center"
            android:maxWidth="300dp" />

    </LinearLayout>

</LinearLayout>
