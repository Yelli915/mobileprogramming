<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_dark_neon"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="32dp"
    android:paddingBottom="24dp">

    <!-- Branding Area -->
    <LinearLayout
        android:id="@+id/branding_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:gravity="center_horizontal|top"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/app_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_display_name"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/main_orange"
            android:layout_marginBottom="8dp"
            android:shadowColor="@color/neon_glow_soft"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8" />

        <TextView
            android:id="@+id/app_tagline_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_tagline"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </LinearLayout>

    <!-- Onboarding Carousel -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboarding_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="4dp" />

    <!-- Page Indicator -->
    <LinearLayout
        android:id="@+id/page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Login Area -->
    <LinearLayout
        android:id="@+id/login_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/google_sign_in_button"
            style="@style/ButtonPrimary"
            android:text="@string/sign_in_with_google"
            android:textStyle="bold"
            android:gravity="center"
            android:contentDescription="@string/sign_in_with_google"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/terms_notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            android:gravity="center"
            android:maxWidth="300dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="4dp" />

    </LinearLayout>

</LinearLayout>
