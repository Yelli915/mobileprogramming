<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/screen_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_dark_neon"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="12dp">

    <!-- Branding Area -->
    <LinearLayout
        android:id="@+id/branding_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|top"
        android:paddingTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/app_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_display_name"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/main_orange"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="4dp"
            android:shadowColor="@color/neon_glow_soft"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8" />

        <TextView
            android:id="@+id/app_tagline_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_tagline"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- Onboarding Carousel -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboarding_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:layout_marginBottom="0dp" />

    <!-- Page Indicator -->
    <LinearLayout
        android:id="@+id/page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Login Area -->
    <LinearLayout
        android:id="@+id/login_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="0dp">

        <!-- 이메일 로그인 섹션 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:layout_marginBottom="12dp"
            app:hintTextColor="@color/text_secondary"
            app:boxStrokeColor="@color/accent_white"
            style="@style/TextInputLayoutWhite">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/accent_white"
                android:textColorHint="@color/text_secondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:layout_marginBottom="16dp"
            app:hintTextColor="@color/text_secondary"
            app:boxStrokeColor="@color/accent_white"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/text_secondary"
            style="@style/TextInputLayoutWhite">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/accent_white"
                android:textColorHint="@color/text_secondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/sign_in_button"
                style="@style/ButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_in"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/sign_up_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up"
                android:textStyle="bold"
                app:strokeColor="@color/main_orange"
                app:strokeWidth="2dp"
                android:textColor="@color/main_orange"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_tertiary"
            android:alpha="0.3"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/google_sign_in_button"
            style="@style/ButtonPrimary"
            android:text="@string/sign_in_with_google"
            android:textStyle="bold"
            android:gravity="center"
            android:contentDescription="@string/sign_in_with_google"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/terms_notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            android:gravity="center"
            android:maxWidth="300dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="4dp" />

    </LinearLayout>

</LinearLayout>
