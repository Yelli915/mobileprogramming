<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: 뒤로가기 버튼과 제목 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="뒤로가기"
                android:scaleType="centerInside"
                android:padding="12dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backButton"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="스케치 런"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- 러닝 코스 목록 제목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="러닝 코스 목록"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 코스 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCourses"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginBottom="24dp" />

        <!-- 선택한 러닝 코스 미리보기 지도 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택한 러닝 코스 미리보기"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp">

            <!-- 지도는 여기에 표시됩니다 (Google Maps, Naver Maps 등) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도 영역"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- 버튼들 -->
        <Button
            android:id="@+id/btnCourseDetail"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="코스 상세 보기"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_outline_background"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnFindLocation"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="내 위치 찾기"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_outline_background"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnStartRun"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="스케치 런 시작"
            android:textColor="@color/accent_white"
            android:background="@drawable/button_neon_orange"
            android:textAllCaps="false"
            android:layout_marginBottom="24dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 코스 정보 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="코스 정보"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- 총 거리 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 거리"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvCourseTotalDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5km"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 예상 소요 시간 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예상 소요 시간"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvCourseEstimatedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30분"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 난이도 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="난이도"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중급"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

