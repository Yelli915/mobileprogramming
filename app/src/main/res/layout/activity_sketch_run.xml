<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- AppBar with elevation -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp"
        android:paddingTop="24dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="0dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="러닝 코스 선택"
            app:titleTextColor="#000000"
            app:titleMarginTop="0dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- 코스 리스트 섹션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="추천 코스"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/btnMoreCourses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="더보기 >"
                        android:textSize="14sp"
                        android:textColor="#FF6B35"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCourses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

            <!-- 지도 미리보기 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="코스 미리보기"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:padding="16dp"
                        android:paddingBottom="8dp" />

                    <FrameLayout
                        android:id="@+id/mapContainer"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:background="?attr/colorSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 코스 정보 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="코스 정보"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- 총 거리 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="?attr/colorSurfaceVariant"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_route"
                                android:layout_marginBottom="8dp"
                                app:tint="#FF6B35" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="총 거리"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvCourseTotalDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5.0km"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                        </LinearLayout>

                        <!-- 예상 소요 시간 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="?attr/colorSurfaceVariant"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_timer"
                                android:layout_marginBottom="8dp"
                                app:tint="#FF6B35" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="예상 시간"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvCourseEstimatedTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30분"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                        </LinearLayout>

                        <!-- 난이도 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="?attr/colorSurfaceVariant"
                            android:padding="16dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_trending_up"
                                android:layout_marginBottom="8dp"
                                app:tint="#FF6B35" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="난이도"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvDifficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="중급"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 코스 상세 보기 버튼 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCourseDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="코스 상세 정보"
                        android:textColor="#000000"
                        android:layout_marginTop="16dp"
                        app:icon="@drawable/ic_info"
                        app:iconTint="#FF6B35"
                        app:iconGravity="textStart"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 시작 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartRun"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:text="스케치 런 시작"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_play_arrow"
                app:iconGravity="textStart"
                app:iconSize="28dp"
                app:cornerRadius="32dp"
                style="@style/ButtonPrimary" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
