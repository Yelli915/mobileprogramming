<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <ripple android:color="#26FFFFFF">
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="0"
                        android:startColor="@color/neon_orange_pressed_start"
                        android:endColor="@color/neon_orange_pressed_end" />
                    <corners android:radius="12dp" />
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp" />
                    <size android:height="52dp" />
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <ripple android:color="#1AFFFFFF">
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="0"
                        android:startColor="@color/neon_orange_start"
                        android:endColor="@color/neon_orange_end" />
                    <corners android:radius="12dp" />
                    <size android:height="52dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>

